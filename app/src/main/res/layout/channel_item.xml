<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgChannelItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtChannelItemName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgChannelItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtChannelItemOwner"
        android:layout_below="@+id/txtChannelItemName"
        android:layout_toRightOf="@+id/imgChannelItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChannelItemUsersCountTitle"
        android:layout_below="@+id/txtChannelItemOwner"
        android:layout_toRightOf="@+id/imgChannelItem"
        android:layout_toEndOf="@+id/imgChannelItem"
        android:text="@string/txt_subscribers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_videos"
        android:id="@+id/txtChannelItemVideoTitle"
        android:layout_below="@+id/txtChannelItemUsersCountTitle"
        android:layout_toRightOf="@+id/imgChannelItem"
        android:layout_toEndOf="@+id/imgChannelItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChannelItemUsersCount"
        android:layout_below="@+id/txtChannelItemOwner"
        android:layout_toRightOf="@+id/txtChannelItemUsersCountTitle"
        android:layout_alignRight="@+id/txtChannelItemOwner"
        android:layout_alignEnd="@+id/txtChannelItemOwner"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChannelItemVideoCount"
        android:layout_below="@+id/txtChannelItemUsersCountTitle"
        android:layout_toRightOf="@+id/txtChannelItemVideoTitle"
        android:layout_alignRight="@+id/txtChannelItemUsersCount"
        android:layout_alignEnd="@+id/txtChannelItemUsersCount"
        android:gravity="right" />
</RelativeLayout>