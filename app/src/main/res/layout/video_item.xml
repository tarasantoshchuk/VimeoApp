<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgVideoItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtVideoItemName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgVideoItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtVideoItemOwner"
        android:layout_below="@+id/txtVideoItemName"
        android:layout_toRightOf="@+id/imgVideoItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_duration"
        android:id="@+id/txtVideoItemDurationTitle"
        android:layout_below="@+id/txtVideoItemOwner"
        android:layout_toRightOf="@+id/imgVideoItem"
        android:layout_toEndOf="@+id/imgVideoItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_plays"
        android:id="@+id/txtVideoItemPlayCountTitle"
        android:layout_below="@+id/txtVideoItemDurationTitle"
        android:layout_toRightOf="@+id/imgVideoItem"
        android:layout_toEndOf="@+id/imgVideoItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVideoItemDuration"
        android:layout_below="@+id/txtVideoItemOwner"
        android:layout_toRightOf="@+id/txtVideoItemDurationTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVideoItemPlayCount"
        android:layout_alignTop="@+id/txtVideoItemPlayCountTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtVideoItemPlayCountTitle"
        android:layout_toEndOf="@+id/txtVideoItemPlayCountTitle"
        android:gravity="right" />

</RelativeLayout>