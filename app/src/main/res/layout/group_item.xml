<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgGroupItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtGroupItemName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgGroupItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtGroupItemOwner"
        android:layout_below="@+id/txtGroupItemName"
        android:layout_toRightOf="@+id/imgGroupItem"
        android:layout_alignRight="@+id/txtGroupItemName"
        android:layout_alignEnd="@+id/txtGroupItemName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_users"
        android:id="@+id/txtGroupItemUserCountTitle"
        android:layout_below="@+id/txtGroupItemOwner"
        android:layout_toRightOf="@+id/imgGroupItem"
        android:layout_toEndOf="@+id/imgGroupItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_videos"
        android:id="@+id/txtGroupItemVideoCountTitle"
        android:layout_below="@+id/txtGroupItemUserCountTitle"
        android:layout_toRightOf="@+id/imgGroupItem"
        android:layout_toEndOf="@+id/imgGroupItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGroupItemUserCount"
        android:layout_below="@+id/txtGroupItemOwner"
        android:layout_toRightOf="@+id/txtGroupItemUserCountTitle"
        android:layout_alignRight="@+id/txtGroupItemOwner"
        android:layout_alignEnd="@+id/txtGroupItemOwner"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGroupItemVideoCount"
        android:layout_below="@+id/txtGroupItemUserCount"
        android:layout_alignRight="@+id/txtGroupItemUserCount"
        android:layout_alignEnd="@+id/txtGroupItemUserCount"
        android:gravity="right"
        android:layout_toRightOf="@+id/txtGroupItemVideoCountTitle"
        android:layout_toEndOf="@+id/txtGroupItemVideoCountTitle" />
</RelativeLayout>