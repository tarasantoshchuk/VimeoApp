<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgCommentOwner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtCommentItemOwnerName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgCommentOwner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCommentItemText"
        android:layout_below="@+id/txtCommentItemOwnerName"
        android:layout_toRightOf="@+id/imgCommentOwner"
        android:layout_alignRight="@+id/txtCommentItemOwnerName"
        android:layout_alignEnd="@+id/txtCommentItemOwnerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_replies"
        android:id="@+id/txtCommentItemRepliesCountTitle"
        android:layout_below="@+id/txtCommentItemText"
        android:layout_toRightOf="@+id/imgCommentOwner"
        android:layout_toEndOf="@+id/imgCommentOwner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCommentItemTimeStamp"
        android:layout_below="@+id/txtCommentItemRepliesCountTitle"
        android:layout_toRightOf="@+id/imgCommentOwner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCommentItemRepliesCount"
        android:layout_below="@+id/txtCommentItemText"
        android:layout_toRightOf="@+id/txtCommentItemRepliesCountTitle"
        android:layout_alignRight="@+id/txtCommentItemText"
        android:layout_alignEnd="@+id/txtCommentItemText"
        android:gravity="right" />
</RelativeLayout>